<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <artifactId>player</artifactId>
        <groupId>uk.co.vodco</groupId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>

    <name>CorePlayer</name>
    <packaging>swf</packaging>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>CorePlayer</artifactId>

    <build>
        <sourceDirectory>src/main/flex</sourceDirectory>
        <testSourceDirectory>src/test/flex</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.sonatype.flexmojos</groupId>
                <artifactId>flexmojos-maven-plugin</artifactId>
                <configuration>
                    <sourceFile>com/seesaw/player/Player.as</sourceFile>
                    <definesDeclaration>
                        <property>
                            <name>PLAYER::Width</name>
                            <value>672</value>
                        </property>
                        <property>
                            <name>PLAYER::Height</name>
                            <value>378</value>
                        </property>
                        <property>
                            <name>PLAYER::V</name>
                            <value>'${pom.version}'</value>
                        </property>
                    </definesDeclaration>
                    <templateURI>folder:${basedir}/src/main/html-template</templateURI>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>wrapper</goal>
                        </goals>
                        <phase>install</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>uk.co.vodco</groupId>
            <artifactId>ControlBarPlugin</artifactId>
            <type>swc</type>
        </dependency>

        <dependency>
            <groupId>uk.co.vodco</groupId>
            <artifactId>PlayerControlsPlugin</artifactId>
            <type>swc</type>
        </dependency>

        <dependency>
            <groupId>uk.co.vodco</groupId>
            <artifactId>LiverailPlugin</artifactId>
            <type>swc</type>
        </dependency>

        <dependency>
            <groupId>uk.co.vodco</groupId>
            <artifactId>DebugProxyPlugin</artifactId>
            <type>swc</type>
        </dependency>

        <dependency>
            <groupId>com.seesaw</groupId>
            <artifactId>PlayerLogging</artifactId>
            <type>swc</type>
        </dependency>

        <dependency>
            <groupId>com.adobe.flex.framework</groupId>
            <artifactId>flex-framework</artifactId>
            <type>pom</type>
        </dependency>

        <dependency>
            <groupId>org.osmf</groupId>
            <artifactId>osmf</artifactId>
            <type>swc</type>
        </dependency>

        <dependency>
            <groupId>org.as3commons</groupId>
            <artifactId>as3commons-logging</artifactId>
            <type>swc</type>
        </dependency>

        <dependency>
            <groupId>com.adobe.flexunit</groupId>
            <artifactId>flexunit</artifactId>
            <type>swc</type>
        </dependency>

    </dependencies>

</project>